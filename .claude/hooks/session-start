#!/bin/bash
# SessionStart hook for IMP groves
# Automatically checks for work assignments when Claude starts in a grove

# Check if this is a grove (has .orc/config.json with type=grove)
if [ -f .orc/config.json ]; then
    TYPE=$(cat .orc/config.json | grep '"type"' | cut -d'"' -f4)
    if [ "$TYPE" = "grove" ]; then
        # Check for work assignment
        if [ -f .orc/assigned-work.json ]; then
            echo ""
            echo "ðŸŒ³ IMP Grove - Checking work assignment..."
            echo ""
            orc work-order check-assignment
        fi
    fi
fi
